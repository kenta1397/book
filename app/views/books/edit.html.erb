<h1>Editing Book</h1>

<%= form_with model:@book do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class = "field">
  <label for = "book_Title">Title</label></br>
  <%= f.text_field:title %>
</div>

<div class = "field">
  <label for = "book_Body">Body</label></br>
  <%= f.text_area:body %>
</div>

<div class = "field">
  <%= f.submit"Update Book" %>
</div>

<% end %>

<%= link_to "Show", book_path(@book) %> | <%= link_to "Back","/books" %>